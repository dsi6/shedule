= form_for @faculty do |f|
  -if @faculty.errors.any?
    .alert-message
      %h2= "при сохранении возникли ошибки:"
      %ul
        - @faculty.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :short_name
    = f.text_field :short_name
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Сохранить'
