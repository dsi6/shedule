= form_for @room do |f|
  -if @room.errors.any?
    .alert-message
      %h2= "при сохранении возникли ошибки:"
      %ul
        - @room.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :rname
    = f.text_field :rname
  .field
    = f.label :audience
    = f.text_field :audience
  .field
    = f.label :rcount_aud
    = f.number_field :rcount_aud
  .field
    = f.label :comment
    = f.text_field :comment
  .actions
    = f.submit 'Сохранить'
