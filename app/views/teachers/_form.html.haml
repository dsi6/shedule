= form_for @teacher do |f|
  -if @teacher.errors.any?
    .alert-message
      %h2= "при сохранении возникли ошибки:"
      %ul
        - @teacher.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :sname
    = f.text_field :sname
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :scrank
    = f.text_field :scrank
  .field
    = f.label :tlogin
    = f.text_field :tlogin
  .actions
    = f.submit 'Сохранить'
