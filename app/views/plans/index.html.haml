%h1 Номер плана
%table.bordered-table
  %thead
    %tr
      %th Номер
      %th
      %th
      %th
  %tbody
    - @plans.each do |plan|
      %tr
        %td= plan.id
        %td= link_to 'Посмотреть', plan
        %td= link_to 'Редактировать ', edit_plan_path(plan)
        %td= link_to 'Удалить', plan, :confirm => 'Are you sure?', :method => :delete

.action
  = link_to 'Новый план', new_plan_path, :class=>"btn primary"
